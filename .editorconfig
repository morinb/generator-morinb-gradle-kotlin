root = true

[*]
indent_style             = space
indent_size              = 2
charset                  = utf-8
trim_trailing_whitespace = true
insert_final_newline     = true

[*.md]
trim_trailing_whitespace = false

[*.js]
ij_javascript_spaces_within_object_literal_braces = true
ij_javascript_space_before_function_left_parenth  = false

[{*.kt, *.kts}]
indent_size = 4
